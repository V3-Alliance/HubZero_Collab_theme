<install type="template" version="1.5">
	<name>NeCTAR</name>
	<creationDate>21/04/2014</creationDate>
	<author>Daniel Micevski, Melvin Luong and Richard Rothwell</author>
	<authorEmail>rrothwell@v3.org.au</authorEmail>
	<authorUrl>http://www.v3.org.au/</authorUrl>
	<version>0.1.0</version>
	<copyright>Copyright 2005-2013 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>NeCTAR Collaboration Laboratory branding.</description>

	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>		
		<filename>index.php</filename>
		<filename>index.html</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>mobile.php</filename>
		<filename>offline.php</filename>		
		<filename>template_thumbnail.png</filename>
	</files>
	<!-- as per https://docs.joomla.org/Understanding_Joomla!_templates -->
	<languages folder="language">
		<language tag="en-GB">en-GB.tpl_nectar.ini</language>
	</languages>
	<!-- as there is no admin folder this won't work in admin mode -->
	<administration>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB.tpl_nectar.ini</language>
		</languages>
	</administration>
	<positions>
		<position>footer</position>
		<position>banner</position>
		<position>welcome</position>
		<position>left</position>
		<position>right</position>
		<position>helppane</position>
		<position>user3</position>
		<position>introblock</position>
		<position>notices</position>
		<position>search</position>
	</positions>
	<params>
	</params>
</install>
